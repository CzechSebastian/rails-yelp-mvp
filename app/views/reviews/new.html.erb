<div class="container text-center">
<h1>What do you think ?</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
  <%= link_to 'Return', restaurants_path, class: "btn btn-primary"  %>
<% end %>
</div>
